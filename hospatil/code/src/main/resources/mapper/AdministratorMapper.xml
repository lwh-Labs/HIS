<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdut.hospital.mapper.AdministratorMapper">

    <!-- 查询管理员信息：根据用户名和密码查询管理员对象 -->
    <select id="findByNameAndPassword" parameterType="map" resultType="com.sdut.hospital.po.Administrator">
        SELECT *
        FROM administrator
        WHERE name = #{name}
          AND password = #{password}
    </select>

    <!-- 插入管理员信息：保存管理员对象到数据库 -->
    <insert id="save" parameterType="com.sdut.hospital.po.Administrator">
        INSERT INTO administrator (name, password)
        VALUES (#{name}, #{password})
    </insert>

</mapper>
